{
  "compilerOptions": {
    "target": "ES2020",
    "module": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "strict": false,
    "allowJs": true,
    "checkJs": false,
    "lib": ["ES2020", "dom"],
    "typeRoots": ["."]
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
} 